# .env - Main configuration (safe to commit)

# Odoo Edition Configuration
ODOO_EDITION=ce                    # Set to 'ce' or 'ee'
ODOO_VERSION=19.0

# Database Connection
POSTGRES_DB=postgres
POSTGRES_USER=odoo
POSTGRES_HOST=db

# Project Configuration
DB_PREFIX=odoo19ce_dev

# Port Configuration (unique ports to avoid conflicts)
ODOO_HTTP_PORT=19069 # use different port
POSTGRES_PORT=15900  # use different port

# Container Mount Points
CUSTOM_ADDONS=/mnt/custom_addons
# EE_ADDONS will be set in docker-compose based on edition

# Modules to install (CE base modules)
MODULES_CE=base,web,account,sale,stock,purchase,project,hr
# Additional EE modules (only used if ODOO_EDITION=ee)
# MODULES_EE=web_enterprise,account_enterprise,sale_enterprise,stock_enterprise

# Development Settings
WITH_DEMO=true
LOG_LEVEL=info
WORKERS=0
TZ=Etc/UTC

# Reverse proxy / deploy-minded
PROXY_MODE=false                  # set true when using nginx/https
SERVER_NAME=localhost             # set to your domain in prod
ENABLE_TLS=false                  # set true in prod when certs are mounted
CLIENT_MAX_BODY_SIZE=128m         # nginx upload limit; match Odoo
NGINX_PROXY_READ_TIMEOUT=720s     # keepalive for longpolling
TLS_CERT=/etc/nginx/certs/${SERVER_NAME}/fullchain.pem
TLS_KEY=/etc/nginx/certs/${SERVER_NAME}/privkey.pem

# XML-RPC Configuration (for future seeding)
ODOO_URL=http://localhost:19069
ODOO_ADMIN=admin